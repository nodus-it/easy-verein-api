{
  "name": "nodus-it/easy-verein-api",
  "description": "Laravel package: EasyVerein API client built on Saloon",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "package",
    "saloon",
    "api-client",
    "easyverein"
  ],
  "authors": [
    {
      "name": "NODUS IT",
      "homepage": "https://www.nodus-it.de"
    }
  ],
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^10.0|^11.0",
    "saloonphp/saloon": "^3.0",
    "spatie/laravel-data": "^4.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "phpunit/phpunit": "^10.2",
    "laravel/pint": "^1.0",
    "larastan/larastan": "^2.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "nunomaduro/phpinsights": "^2.0",
    "rector/rector": "^0.18",
    "infection/infection": "^0.27"
  },
  "autoload": {
    "psr-4": {
      "NodusIT\\EasyVereinApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "NodusIT\\EasyVereinApi\\EasyVereinApiServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage",
    "test:phpunit": "phpunit",
    "lint": "pint",
    "lint:check": "pint --test",
    "analyse": "phpstan analyse",
    "insights": "phpinsights",
    "refactor": "rector process",
    "refactor:dry": "rector process --dry-run",
    "mutation": "infection",
    "qa": [
      "@lint:check",
      "@analyse",
      "@test"
    ],
    "qa:fix": [
      "@lint",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
